{
  "prettier.singleQuote": true,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.js.map": true,
    "**/*.js": { "when": "$(basename).ts" }
  },
  "editor.tabSize": 2,
  "workbench.fontAliasing": "antialiased",
  "window.zoomLevel": 0,
  "prettier.printWidth": 150,
  "explorer.openEditors.visible": 0
}
